generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                    Int      @id @default(autoincrement())
  name                  String
  email                 String   @unique
  salt                  String
  passwordHash          String
  emailVerified         Boolean  @default(false)
  verificationCode      String?
  verificationExpiresAt DateTime?
  createdAt             DateTime @default(now())
  sessions              Session[]
  profile               UserProfile?
}

model UserProfile {
  id             Int      @id @default(autoincrement())
  userId         Int      @unique
  handle         String?
  bio            String?  @db.Text
  favoritePlayer String?
  location       String?
  avatarUrl      String?  @db.Text
  bannerUrl      String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Session {
  token     String   @id
  userId    Int
  createdAt DateTime @default(now())
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FanWallPost {
  id        Int      @id @default(autoincrement())
  name      String
  handle    String?
  message   String   @db.Text
  time      String?
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model NewsArticle {
  id      Int    @id @default(autoincrement())
  title   String
  excerpt String @db.Text
  content String? @db.LongText
  image   String @db.Text
  date    String
}

model NewsComment {
  id        Int      @id @default(autoincrement())
  articleId Int
  name      String
  handle    String?
  message   String   @db.Text
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model NewsLike {
  id        Int      @id @default(autoincrement())
  articleId Int      @unique
  count     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Match {
  id          Int     @id @default(autoincrement())
  date        String
  time        String
  home        String
  away        String
  competition String
  stadium     String
  status      String
  score       String?
  result      String?
}

model Player {
  id          Int    @id @default(autoincrement())
  name        String
  position    String
  groupName   String @map("group")
  number      Int
  nationality String
  age         Int
  image       String @db.Text
}

model Staff {
  id          Int    @id @default(autoincrement())
  name        String
  role        String
  nationality String
  image       String @db.Text
}

model LiveMatch {
  id      Int  @id
  payload Json
}

model HomeSettings {
  id      Int  @id @default(autoincrement())
  payload Json
}

model FooterSettings {
  id      Int  @id @default(autoincrement())
  payload Json
}

model TransfersSettings {
  id      Int  @id @default(autoincrement())
  payload Json
}

model HistorySettings {
  id      Int  @id @default(autoincrement())
  payload Json
}

model Standings {
  id      Int  @id @default(autoincrement())
  payload Json
}

model TopStats {
  id      Int  @id @default(autoincrement())
  payload Json
}

model LiveOverrides {
  id      Int  @id @default(autoincrement())
  payload Json
}

model FanZonePoll {
  id      Int  @id @default(autoincrement())
  payload Json
}

model FanPrediction {
  id        Int      @id @default(autoincrement())
  name      String
  handle    String?
  homeScore Int
  awayScore Int
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model FanChallenge {
  id        Int      @id @default(autoincrement())
  name      String
  handle    String?
  caption   String?  @db.Text
  mediaUrl  String   @db.Text
  mediaType String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model EmailSubscriber {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  createdAt DateTime @default(now())
}

model Source {
  id                Int        @id @default(autoincrement())
  name              String
  type              String
  url               String     @unique
  language          String
  reliabilityWeight Float      @default(0.5)
  isActive          Boolean    @default(true)
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  items             IngestItem[]
}

model IngestItem {
  id           Int        @id @default(autoincrement())
  sourceId     Int
  url          String     @unique
  title        String
  publishedAt  DateTime?
  language     String?
  excerptShort String?    @db.Text
  rawText      String?    @db.LongText
  fetchedAt    DateTime   @default(now())
  source       Source     @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  clusterItems ClusterItem[]
}

model Cluster {
  id         Int               @id @default(autoincrement())
  topicTitle String
  status     String            @default("pending")
  category   String?
  confidence Float             @default(0.5)
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  items      ClusterItem[]
  contents   GeneratedContent[]
  drafts     GeneratedArticle[]
}

model ClusterItem {
  id         Int        @id @default(autoincrement())
  clusterId  Int
  itemId     Int
  similarity Float?
  cluster    Cluster    @relation(fields: [clusterId], references: [id], onDelete: Cascade)
  item       IngestItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  @@unique([clusterId, itemId])
}

model GeneratedContent {
  id        Int      @id @default(autoincrement())
  clusterId Int
  kind      String
  content   String   @db.LongText
  createdAt DateTime @default(now())
  cluster   Cluster  @relation(fields: [clusterId], references: [id], onDelete: Cascade)
}

model GeneratedArticle {
  id          Int      @id @default(autoincrement())
  clusterId   Int
  title       String
  slug        String   @unique
  excerpt     String   @db.Text
  content     String   @db.LongText
  imageUrl    String?  @db.Text
  category    String?
  tags        Json?
  sources     Json
  status      String   @default("draft")
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  cluster     Cluster  @relation(fields: [clusterId], references: [id], onDelete: Cascade)
}
